---
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Hector Garcia - Front-end Developer Portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="bg-black text-white antialiased min-h-screen w-full overflow-x-hidden relative selection:bg-primary selection:text-black">
        <!-- Ambient Background Orbs for Glass Refraction -->
        <div class="fixed top-[-10%] left-[-10%] w-[40%] h-[40%] bg-primary/20 blur-[120px] rounded-full pointer-events-none z-0 opacity-50"></div>
        <div class="fixed bottom-[-10%] right-[-10%] w-[40%] h-[40%] bg-purple-500/10 blur-[120px] rounded-full pointer-events-none z-0 opacity-30"></div>
        
		<slot />
	</body>
</html>

<style is:global>
	/* Global styles if needed, Tailwind handles most */
	:root {
		--accent: 6, 182, 212; /* Cyan-500 */
	}
	html {
		font-family: system-ui, sans-serif;
	}
</style>
